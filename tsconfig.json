{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": false /* 엄격한 타입 검사 비활성화 */,
    "noUnusedLocals": false /* 사용하지 않는 로컬 변수 검사 비활성화 */,
    "noUnusedParameters": false /* 사용하지 않는 매개변수 검사 비활성화 */,
    "noFallthroughCasesInSwitch": false /* switch문 fallthrough 검사 비활성화 */,
    "noImplicitAny": false,

    /* Path Aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@pages/*": ["src/pages/*"],
      "@utils/*": ["src/utils/*"],
      "@hooks/*": ["src/hooks/*"],
      "@styles/*": ["src/styles/*"],
      "@assets/*": ["src/assets/*"]
    }
  },
  "include": ["src", "@types/global.d.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
